@model Customer

<div class="container-fluid">
<form method="post">

    <div>
        <label asp-for="Email"></label>
        <input  class="form-control" asp-for="Email" />
    </div>
    <div>
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" />
    </div>
    <br />
    <input type="submit" asp-action="Index" asp-controller="Login"
       value="Register" as class="btn btn-primary" />
 
    <a asp-action="NewUser" asp-controller="Login" class="btn btn-primary">New User </a>
    </form>


</div>